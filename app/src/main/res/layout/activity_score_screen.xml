<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreScreen">

    <TextView
        android:id="@+id/score_text"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginStart="179dp"
        android:layout_marginLeft="179dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="189dp"
        android:layout_marginRight="189dp"
        android:layout_marginBottom="197dp"
        android:text="SCORE"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="186dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="365dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="150sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yes_image"
        app:layout_constraintVertical_bias="0.203" />

    <Button
        android:id="@+id/to_home_button"
        android:layout_width="128dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="52dp"
        android:background="@color/colorPrimary"
        android:onClick="goHome"
        android:text="Home"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/to_camera_button"
        android:layout_width="128dp"
        android:layout_height="76dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="52dp"
        android:background="@color/colorPrimary"
        android:text="Camera"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="goToCamera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/to_leaderboard"
        android:layout_width="128dp"
        android:layout_height="76dp"
        android:layout_marginStart="276dp"
        android:layout_marginLeft="276dp"
        android:layout_marginBottom="52dp"
        android:background="@color/colorPrimary"
        android:onClick="goToLeaderboard"
        android:text="Leaderboard"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="414dp"
        android:layout_height="69dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/colorPrimary"
        android:text="Does it recycle?"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yes_image"
        android:layout_width="164dp"
        android:layout_height="159dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/no_image"
        android:layout_width="164dp"
        android:layout_height="159dp"
        android:layout_marginTop="32dp"
        android:contentDescription="no"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="164dp"
        android:layout_height="159dp"
        android:layout_marginTop="32dp"
        android:contentDescription="question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:srcCompat="@drawable/question" />
</androidx.constraintlayout.widget.ConstraintLayout>